@model DetailsAdopterPetViewModel
@{
    ViewData["Title"] = "Detalhes Adotante Pet";
}
<style>
    .list-group-item {
        border: none !important;
        padding: 0.5rem 1.25rem !important;
    }
</style>

<div class="container">
    <h3>
        Ficha do Adotante
    </h3>
    <br />
    <div class="row" style="margin-bottom: 20px;">
        <div class="col-md-6">
            <div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><span><b>Nome do Adotante:</b></span> @Model.FullName</li>
                    <li class="list-group-item"><span><b>Endereço Residencial:</b></span> @Model.District</li>
                    <li class="list-group-item"><span><b>Cidade/Estado:</b></span> @Model.City/@Model.State</li>
                    <li class="list-group-item"><span><b>Bairro:</b></span> @Model.District</li>
                    <li class="list-group-item"><span><b>CEP:</b></span> @Model.CEP</li>
                    <li class="list-group-item"><span><b>Fone Celular:</b></span> @Model.CellPhone</li>
                    <li class="list-group-item"><span><b>Profissão:</b></span> @Model.OccupationArea</li>
                    <li class="list-group-item"><span><b>E-mail:</b></span> @Model.Email</li>
                </ul>
            </div>
        </div>
    </div>
    <br /><br /><br />
    <div class="row" style="margin-bottom: 20px;">
        <div class="col-md-1"></div>
        <div class="col-md-2">
            <a asp-controller="Pet" asp-action="Index" class="btn btn-primary btn-lg active" style="background-color: #7187FF; border-color: #0866F2;">Voltar</a>
        </div>
    </div>
</div>
