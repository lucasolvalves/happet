@{
    ViewData["Title"] = "Excluir Pet";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="modal fade" id="deletePets" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Confirma a exclusão do registro?</h5>
                        </div>
                        <form asp-controller="Pet" asp-action="Delete" method="post">
                            <div class="modal-footer">
                                <a class="btn btn-danger" asp-controller="Pet" asp-action="Index">Não</a>
                                <button type="submit" class="btn btn-primary">Sim</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>