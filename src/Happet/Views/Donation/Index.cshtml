@model IEnumerable<GridDonationViewModel>
@{
    ViewData["Title"] = "Doações";
}

<div class="container">
    <h3>
        Doações recebidas
    </h3>
    <br />
    @if (Model.Count() > 0)
    {
        var count = 0;
        <div class="row" style="margin-bottom: 20px;">
            <div class="col-md-12">
                <table class="table table-bordered" id="tablePets">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Código</th>
                            <th scope="col">Pet</th>
                            <th scope="col">Valor</th>
                            <th scope="col">Data</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count = count + 1;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.Id</td>
                                <td>@item.PetName</td>
                                <td>R$ @item.Value</td>
                                <td>@item.PaymentDate</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <center><span>Não existe doações vinculadas a esse usuário!</span></center>
    }
</div>