<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Happet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-nav flex-grow-1">
                    <b><a class="navbar-brand" style="font-size: 25px" asp-area="" asp-controller="Home" asp-action="Index">Happet</a></b>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <br />
                    <div class="navbar-nav flex-grow-1">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-range" placeholder="busque aqui seu pet">
                            <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
                        </div>
                    </div>
                    <div class="navbar-nav flex-grow-1"></div>
                    <div class="navbar-nav flex-grow-1"></div>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <div class="input-group">
                                <span style="margin-top:9px;">
                                    <i class="fa-solid fa-house"></i>
                                </span>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="input-group">
                                <span style="margin-top:9px;">
                                    <i class="fa-solid fa-user"></i>
                                </span>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Entrar</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="btn-group">
                                <span style="margin-top:9px;">
                                    <i class="fa-solid fa-user"></i>
                                </span>
                                <a class="nav-link text-dark dropdown-toggle" style="cursor: pointer;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Olá, Lucas</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="" asp-controller="Pet" asp-action="Index">
                                        <span style="margin-top:9px;">
                                            <i class="fa-solid fa-paw"></i>
                                        </span>
                                        Pets
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area="" asp-controller="Doacao" asp-action="Index">
                                        <span style="margin-top:9px;">
                                            <i class="fa-solid fa-money-bill-wave"></i>
                                        </span>
                                        Doações
                                    </a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="input-group">
                                <span style="margin-top:9px;">
                                    <i class="fa-solid fa-circle-question"></i>
                                </span>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Faq" asp-action="Index">FAQ</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Happet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
