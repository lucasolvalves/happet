@{
    ViewData["Title"] = "Cadastro";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="modal fade" id="typePerson" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Selecione o seu perfil:</h5>
                        </div>
                        <form asp-controller="Account" asp-action="SetProfile" method="post">
                            <div class="modal-body">
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="typePeople" value="@ETypePeople.Adopter" checked>
                                        <label class="form-check-label">
                                            Adotante
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="typePeople" value="@ETypePeople.Ngo">
                                        <label class="form-check-label">
                                            ONG
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <a class="btn btn-danger" asp-controller="Home" asp-action="Index">Voltar</a>
                                <button type="submit" class="btn btn-primary">Próximo</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>