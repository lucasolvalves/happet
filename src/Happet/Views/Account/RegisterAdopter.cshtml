@model RegisterAdopterViewModel
@{
    ViewData["Title"] = "Cadastro Adotante";
}

<div class="container">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div id="first">
                <div class="myform form ">
                    <div class="logo mb-3">
                        <div class="col-md-12 text-center">
                            <h1>Crie seu cadastro</h1>
                        </div>
                    </div>
                    @if (TempData["error-message"] != null)
                    {
                        var errors = TempData["error-message"] as List<string>;
                        @foreach (var errorMessage in errors)
                        {
                            <strong class="alert-danger">@errorMessage</strong><br />
                        }
                        <br />
                    }
                    <form asp-controller="Account" asp-action="RegisterAdopter" method="post">
                        <div id="adopter">
                            <div class="form-group">
                                <label asp-for="FullName" class="control-label">Nome Completo *</label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RG" class="control-label">RG *</label>
                                <input asp-for="RG" class="form-control" />
                                <span asp-validation-for="RG" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CPF" class="control-label">CPF *</label>
                                <input asp-for="CPF" class="form-control" />
                                <span asp-validation-for="CPF" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BirthDate" class="control-label">Data de Nascimento *</label>
                                <input asp-for="BirthDate" class="form-control" />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                        </div>
                        @await Html.PartialAsync("../Account/_RegisterPartial.cshtml", Model)
                        <div class="col-md-12 text-center mb-3">
                            <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Criar seu cadastro</button>
                        </div>
                    </form>
                    <div class="col-md-12 ">
                        <div class="form-group">
                            <p class="text-center">Já tem cadastro? <a asp-controller="Account" asp-action="Login" id="signin">entrar</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>