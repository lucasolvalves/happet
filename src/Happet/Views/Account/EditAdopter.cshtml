@model EditAdopterViewModel
@{
    ViewData["Title"] = "Editar Adotante";
}

<div class="container">
    <form asp-controller="Account" asp-action="EditAdopter" method="post">
        <div class="row">
            <div class="col-md-5 mx-auto">
                <div id="first">
                    <div class="myform form ">
                        <div class="logo mb-3">
                            <div class="col-md-12 text-center">
                                <h1>Editar seu cadastro</h1>
                            </div>
                        </div>
                        @if (TempData["error-message-edit-user"] != null)
                        {
                            var errors = TempData["error-message-edit-user"] as List<string>;
                            @foreach (var errorMessage in errors)
                            {
                                <strong class="alert-danger">@errorMessage</strong><br />
                            }
                            <br />
                        }
                        <div id="adopter">
                            <div class="form-group">
                                <label asp-for="FullName" class="control-label">Nome Completo *</label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RG" class="control-label">RG *</label>
                                <input asp-for="RG" class="form-control" />
                                <span asp-validation-for="RG" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CPF" class="control-label">CPF *</label>
                                <input asp-for="CPF" class="form-control" />
                                <span asp-validation-for="CPF" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BirthDate" class="control-label">Data de Nascimento *</label>
                                <input asp-for="BirthDate" class="form-control" />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                        </div>
                        @await Html.PartialAsync("../Account/_EditPartial.cshtml", Model)

                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-bottom: 20px;">
            <div class="col-md-4"></div>
            <div class="col-md-2">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg active" style="background-color: #7187FF; border-color: #0866F2;">Voltar</a>
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-warning btn-lg" style="color: white;">Alterar</button>
            </div>
            <div class="col-md-5"></div>
        </div>
    </form>
</div>